//Navbar

.navbar
    position fixed
    z-index 999
    bottom 3rem
    left 0px
    right 0px
    padding 0 3rem
    +below(820px)
        padding 0 1rem
        bottom 1rem

    &__wrap
        max-width 117rem
        margin 0 auto
        padding 0 3rem
        height 7.5rem
        position relative

        +below(670px)
            height 6.5rem
            padding 0 1rem


        background #FFFFFF
        border-radius 0.2rem;
        box-shadow 0px .2rem .8rem 0px rgba(0,0,0,0.10)

        display flex
        justify-content space-between
        align-items center

    .menu-icon
        font-size 2rem
        font-weight 600
        cursor pointer
        user-select none
        cf()
        span
            line-height 1
            float left
            position relative
            top -0.2rem
            margin-left 1.2rem
            // vertical-align middle
            // display inline-block
        svg
            float left
            width 2.8rem
            height 1.8rem
            // display inline-block
        .hamburger
            fill $link


    .nav-pop-up
        display none
        background-color #ccc
        width 100%
        position absolute
        left 0
        bottom 100%

        .main-nav
            a
                font-weight 200
                font-size: 5.2rem
                color $text
                line-height: 1.8
            // position absolute
            // bottom 0
            // left 0
            // .active
            //     background-color #afa

        .links
            background-color #000
            li
                display inline-block
