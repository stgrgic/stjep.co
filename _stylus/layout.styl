.logo
    transform rotate(-60deg)
    margin 20px
    position fixed
    z-index 998
    animation: roll 60s infinite linear reverse;
    &:hover
        // transform: scale(2);
        // tramsition
        // animation: oll 60s infinite linear reverse,scaleIt .2s;
    .bc
        width 46px
        height 46px
        border-radius 50%
        border 1px solid $text-grey
        display inline-block
        float left
        // animation: roll 2s infinite linear;
        background linear-gradient(white, orange)
        &__1
            transform rotate(140deg)
            // background-color #afa
            // animation: roll 3s infinite linear reverse;
            .sc
                animation: roll 4s infinite linear reverse;
        &__2
            transform rotate(-50deg)
    .sc
        width 22px
        height 22px
        // border-radius 50%
        // border 1px solid $text-grey
        position relative
        transform-origin: 100% 100%;
        animation: roll 30s infinite linear;
        &:after
            content ""
            position absolute
            // top 0
            // left 0
            bottom -3px
            right -3px
            width 22px
            height 22px
            border-radius 50%
            border 1px solid $text-grey
            background linear-gradient(red, blue)
            // background-color #aff
        // float left
        // display inline-block

        @keyframes roll {
          0% {
            transform: rotate(0);
          }
          100% {
            transform: rotate(360deg);
          }
        }

        @keyframes scaleIt {
          0% {
            transform: scale(0);
          }
          100% {
            transform: scale(1.5);
          }
        }
