//Base
// rupture.base-font-size = 1.0rem

html
    font-size: 62.5%
    //Chrome has bug with percent based font size on root element
        
    +below(600px)
        font-size 50%

body
    background-color $bg
    color $text
    font-weight 400

    font-family "futura-pt", sans-serif;

    font-size 2.6rem
    line-height 1.6

    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale

    text-rendering geometricPrecision
    margin 80px 30px
    +below(1000px)
        margin 8% 3%
    +below(600px)
        margin 0
    
.page-content
    max-width 100.0rem
    width 100%
    margin 0 auto
    background-color #fff
    padding 80px 160px 30px
    +below(1000px)
        padding 8% 16% 3%
    +below(600px)
        padding 8% 10% 3%

a
    color $link
    display inline-block
    transition all 0.15s ease-in
    position relative
    &:hover
        color $link-hover


