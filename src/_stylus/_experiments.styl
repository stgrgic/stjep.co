.experiment {
    background-color #fff
    margin-top 1rem
    header {
        margin-bottom 1rem
        p, time {
            margin 0
            font-size 0.83rem
        }
        .meta {
            position relative
            time {
                margin-left 1rem
            }
            .status {
                background-color #FFB23F
                color #fff
                font-weight 500
                font-size 0.7rem
                padding 0 0.5em 0.2em
                border-radius 3px
                margin-left 1rem
            }
        }
        h1 {
            margin 0
            margin-top 20vh
        }
    }
    &__content {
        max-width 800px
        margin 0 auto
        padding 0 15px
    }
}

.experiment-01-image-zoom {
    &:before {
        content ""
        position fixed
        z-index 2
        top 0
        left 0
        bottom 0
        right 0
        width 100%
        height 100%
        opacity 0
        background-color #333
        visibility hidden
        transition all 0.3s ease-in-out
    }
    &.js-image-is-zoomed {
        &:before {
            visibility visible
            z-index 9
            opacity 1
            transition all 0.5s ease-in-out
        }
        .tr-zoom {
            cursor zoom-out
            &.js-is-zoomed {
                position relative
                z-index 99
            }
        }
    }
    // -------------------------------
    .tr-zoom {
        cursor pointer
        cursor zoom-in
        display block
        transform-origin 50% 50%
        transition all 0.5s ease-in-out 0s
        position static
        z-index 2
        position relative
        &.js-is-zoomed {
            position relative
            z-index 99
        }
    }
}