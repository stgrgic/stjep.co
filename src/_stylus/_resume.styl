
.resume {
    &__text {
        fluid-type(16px, 18px)
    }

}

// Layout
.row {
    // background-color #afa
    display flex
    justify-content space-between
    flex-direction column
    // clearfix()
    .column {
        // background-color #ffa
    }
    .c-3, .c-7 {
        width 100%
    }

    +above(770px) {
        flex-direction row
        .c-3 {
            width 27.8350515%;
        }
        .c-7 {
            width 69.0721649%
        }
        &.project {
            .c-3 {
                width 100px;
            }
            .c-7 {
                width calc(100% - 130px)
            }
        }
    }
}

.resume-header {
    text-align right
    &__title {
        margin-bottom 0.2em
        font-size 2.5rem
        font-weight 700
    }
    &__description {
        font-size 1rem
    }
}

.section {
    position relative
    margin-top 8rem
