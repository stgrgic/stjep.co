.resume {
    
main {
    font-size 0.83rem
}
p {
    margin 0
}

// Layout
.row {
    display flex
    justify-content space-between
    flex-direction column
    
    margin-bottom 2rem
    &__left {
        margin-bottom 1rem
        &__title {
            font-size 1.2rem
            opacity 0.3
        }
    }
    // ---------------------------------------
    +above(970px){
        flex-direction row
        &__left {
            width 100%
            max-width 170px
            text-align right
            h2 {
                font-size 1.2rem
                opacity 0.3
                position relative
                // top 2px
            }
        }
        &__right {
            width 100%
            max-width 570px
        }
    }
}

// -----------------------------  
.header {
    text-align right
    margin-bottom 3rem
    &__title {
        max-width initial
        margin-bottom 0.2em
    }
    &__description {
        font-size 1rem
    }
}
.resume-intro {
    &__title {
        top -2px
    }
    &__introduction {
        font-size 0.83rem
    }
}
.employment {
    &__title {
        top 2px
    }
}
// --------------------------
.company {
    position relative
    top -2px
    &__name, &__position {
        display inline-block
        line-height 1.625
        margin 0
        font-size 1rem
    }
    &__position {
        margin-left 0.2rem
    }
    &__name {
        // font-weight 700
        color #1F3751
    }
    &__period {
        opacity 0.5
    }
    &__website {
        margin-left 0.2rem
        // text-transform uppercase
        font-size 0.7rem
        font-weight 500
    }
    &__introduction {
        margin 0.5rem 0 0
    }
    
    &:not(:last-child) {
        padding-bottom 1.5rem
        margin-bottom 1.5rem
        position relative
        &:after {
            content ""
            display block
            position absolute
            left 0
            bottom 0
            width 100px
            height 2px
            background-color $color-font
            opacity 0.2
        }
    }

    .projects {
        margin-top 1rem
        &__title {
            font-weight 300
            margin-bottom 0.5rem
            opacity 0.5
        }
        .project {
            &__name, &__link {
                display inline-block
                line-height 1.625
                font-size .83rem
            }
            &:not(:last-child){
                margin-bottom 1rem
            }
            &__name {
                position relative
                padding-left 1rem
                &:before {
                    content "-"
                    position absolute
                    left 0
                }
            }
            &__link {
                // text-transform uppercase
                font-size 0.7rem
                font-weight 500
                margin-left 0.5rem
            }
        }
    }
}
// ------------------------------------------

.personal-projects {
    .project {
        margin-top 1px
        &__name, &__link {
            display inline-block
        }
        &__name {
            font-size 1rem
            color #1F3751
        }
        &__link {
            font-size 0.7rem
            font-weight 500
            margin-left 0.5rem
        }
    }
}

